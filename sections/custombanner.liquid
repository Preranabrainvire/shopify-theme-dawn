{%  if section.settings.custombanner != blank and section.settings.home_welcome_message != blank %}
{{section.settings.custombanner}}
  {{ section.settings.home_welcome_message }}
  {{ section.settings.logo_aligment }}
  {% endif %}

  {% for block in section.blocks %}
  {% if block.type=="images" and block.settings.image_with_text_image!=blank %}
     <a href="{{ block.settings.button_link }}">{{ block.settings.image_with_text_image | image_url: width: 400, height: 300 | image_tag }}</a>
     <iframe src="{{ block.settings.video_url  }}" title="description"></iframe>
     <br>
  {% endif %} 
{% endfor %} 

    
   
  {% schema %}
  
  {
    
    
    "name": "Custombanner",
      "blocks" : [
          {
          "name":"text",
          "type":"text",
          "settings":[{
            "type": "video",
            "id": "Video",
            "label": "Video"
          },
          {
            "type": "url",
            "id": "video_url",
            "label": "Video URL"
          }
          ]
        }
      ],
    "settings": [
      {
        "type" : "text",
        "id" : "custombanner",
        "label" : "Custom Place"
        
        
      },
    
    
      {
  "type": "textarea",
  "id": "home_welcome_message",
  "label": "Welcome message",
  "default": "Welcome to my shop!"
},
      {
  "type": "radio",
  "id": "logo_aligment",
  "label": "Logo alignment",
  "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "centered",
      "label": "Centered"
    }
  ],
  "default": "left"
}
    ]

    
  }
{% endschema %}